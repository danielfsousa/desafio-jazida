{
  "name": "desafio-jazida",
  "version": "0.1.0",
  "description": "Desafio Jazida.com",
  "author": "Daniel Sousa <sousa.dfs@gmail.com>",
  "main": "src/index.js",
  "private": true,
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "precommit": "npm run lint",
    "prestart": "npm run docs",
    "start": "cross-env NODE_ENV=production pm2 start ./src/index.js",
    "predev": "npm run docs",
    "dev": "nodemon ./src/index.js",
    "lint": "eslint **/*.js --ignore-path .gitignore --ignore-pattern internals/scripts",
    "lint:fix": "npm run lint -- --fix",
    "lint:watch": "npm run lint -- --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha --timeout 20000 --recursive src/api/tests",
    "test:unit": "cross-env NODE_ENV=test mocha src/api/tests/unit",
    "test:integration": "cross-env NODE_ENV=test mocha --timeout 20000 src/api/tests/integration",
    "test:watch": "nodemon --exec \"npm run test\"",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postcoverage": "opn coverage/lcov-report/index.html",
    "validate": "npm run lint && npm run test",
    "logs": "cat logs/all.log",
    "logs:error": "cat logs/errors.log",
    "docs": "apidoc -i src -o docs",
    "docker:start": "cross-env NODE_ENV=production pm2-docker start ./src/index.js",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "dependencies": {
    "apidoc": "^0.17.5",
    "body-parser": "^1.17.0",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.3",
    "cross-env": "^5.0.1",
    "dotenv-safe": "^4.0.4",
    "express": "^4.15.2",
    "express-validation": "^1.0.2",
    "helmet": "^3.5.0",
    "http-status": "^1.0.1",
    "joi": "^10.4.1",
    "method-override": "^2.3.8",
    "moment-timezone": "^0.5.13",
    "morgan": "^1.8.1",
    "sequelize": "^4.4.2",
    "tedious": "^2.0.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^2.13.1",
    "eslint": "^4.2.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-chai-expect": "^1.1.1",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.14.3",
    "lodash": "^4.17.4",
    "mocha": "^3.3.0",
    "nodemon": "^1.11.0",
    "nyc": "^11.0.3",
    "opn-cli": "^3.1.0",
    "sequelize-cli": "^2.7.0",
    "sinon": "^2.2.0",
    "sinon-chai": "^2.10.0",
    "supertest": "^3.0.0"
  }
}
